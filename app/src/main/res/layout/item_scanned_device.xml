<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_scanned_device_name"
            android:text="name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_scanned_device_address"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_scanned_device_name"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="rssi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_scanned_device_rssi"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="10dp"
            app:layout_constraintVertical_bias="0.482" app:layout_constraintEnd_toStartOf="@+id/imageView"/>
    <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp" app:srcCompat="@drawable/ic_rssi" android:id="@+id/imageView"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.491" app:layout_constraintEnd_toStartOf="@+id/btn_connect_device"/>
    <Button
            android:text="连接"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_connect_device"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>