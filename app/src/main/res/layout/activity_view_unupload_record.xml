<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".activity.ViewUnuploadRecordActivity">

    <TextView
            android:id="@+id/unupload_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/unuploadedRecord"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    <ListView
            android:id="@+id/unupload_file_list"
            android:layout_width="match_parent"
            android:layout_height="611dp"
            android:layout_marginBottom="10dp"
            android:choiceMode="multipleChoice"
            tools:layout_editor_absoluteX="1dp"/>

    <Button
            android:id="@+id/unupload_upload_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/uploadAllRecord"/>

</LinearLayout>